
<div class="mx-4 border border-blue-500"></div>
<div class="container mx-auto bg-gray-100 px-4 py-4">
  <!-- Featured Articles -->
  <section class="mb-8">
    <h2 class="mb-4 text-3xl font-bold">Featured Posts of the Past Week</h2>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4">
      <% homeData.featured.forEach(article=> { %>
      <a href="/<%= article.slug %>" class="block">
        <article
          class="bg-white p-4 shadow-md transition-transform duration-300 hover:scale-105 hover:shadow-lg"
        >
          <!-- Article Image -->
          <div class="relative mb-4">
            <img
              src="<%= article.imageUrl %>"
              alt="Article Image"
              class="h-auto w-full"
            />

            <!-- Article Type Tag -->
            <div class="absolute right-2 top-2">
              <% if (article.isPremium) { %>
              <span
                class="rounded-full bg-gradient-to-r from-purple-600 to-blue-600 px-3 py-1 text-sm font-semibold text-white shadow-md"
              >
                Premium
              </span>
              <% } else { %>
              <span
                class="rounded-full border border-black bg-black px-3 py-1 text-sm font-semibold text-white"
              >
                Standard
              </span>
              <% } %>
            </div>
          </div>

          <!-- Article Content -->
          <div>
            <h3 class="mb-2 text-xl font-semibold"><%= article.title %></h3>
            <p class="mb-2 text-gray-600">Category: <%= article.category %></p>
            <p class="mb-2 text-gray-600">
              Posted Date: <%= article.datePublished %>
            </p>
          </div>
        </article>
      </a>
      <% }) %>
    </div>
  </section>

