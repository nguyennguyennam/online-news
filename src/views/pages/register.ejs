<main
  class="flex h-fit min-h-screen flex-col items-center justify-center gap-12 p-6"
>
  <h1 class="text-center text-3xl font-bold">Create an Account</h1>

  <form
    action=""
    class="flex w-full flex-col gap-8 rounded-md md:w-2/3 lg:w-1/2 xl:w-1/3"
  >
    <div class="flex w-full flex-col">
      <label for="name" class="text-sm font-semibold">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="h-12 w-full rounded-sm border-2 border-zinc-500 px-4 py-2 outline-none duration-200 focus:border-black"
      />
    </div>

    <div class="flex w-full flex-col">
      <label for="username" class="text-sm font-semibold">Username</label>
      <input
        type="text"
        id="username"
        name="username"
        required
        class="h-12 w-full rounded-sm border-2 border-zinc-500 px-4 py-2 outline-none duration-200 focus:border-black"
      />
    </div>

    <div class="flex w-full flex-col">
      <label for="email" class="text-sm font-semibold">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="h-12 w-full rounded-sm border-2 border-zinc-500 px-4 py-2 outline-none duration-200 focus:border-black"
      />
    </div>

    <div class="flex w-full flex-col">
      <label for="password" class="text-sm font-semibold">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        class="h-12 w-full rounded-sm border-2 border-zinc-500 px-4 py-2 outline-none duration-200 focus:border-black"
      />
    </div>

    <div class="flex w-full flex-col">
      <label for="confirm" class="text-sm font-semibold"
        >Confirm Password</label
      >
      <input
        type="password"
        id="confirm"
        name="confirm"
        required
        class="h-12 w-full rounded-sm border-2 border-zinc-500 px-4 py-2 outline-none duration-200 focus:border-black"
      />
    </div>

    <button
      type="submit"
      class="flex h-12 items-center justify-center border-2 border-black bg-black font-bold uppercase tracking-tight text-white duration-200 hover:bg-white hover:text-black"
    >
      Register
    </button>

    <p class="self-end">
      I already have an account.&nbsp<a
        href="/login"
        class="text-zinc-500 underline"
        >Login</a
      >.
    </p>
  </form>

  <div
    class="-mt-4 flex w-full flex-col items-center gap-6 md:w-2/3 lg:w-1/2 xl:w-1/3"
  >
    <div class="relative flex w-full items-center justify-center">
      <hr class="absolute top-1/2 -z-10 h-0.5 w-full border-zinc-700" />
      <span class="bg-white px-2 font-medium">or</span>
    </div>

    <div class="flex flex-row gap-4">
      <div
        class="flex items-center justify-center rounded-md p-2 duration-200 hover:bg-zinc-200"
      >
        <img
          src="/images/google.svg"
          class="size-8 object-contain lg:size-12"
          alt="Google"
        />
      </div>
      <div
        class="flex items-center justify-center rounded-md p-2 duration-200 hover:bg-zinc-200"
      >
        <img
          src="/images/facebook.svg"
          class="size-8 object-contain lg:size-12"
          alt="Facebook"
        />
      </div>
      <div
        class="flex items-center justify-center rounded-md p-2 duration-200 hover:bg-zinc-200"
      >
        <img
          src="/images/twitter.svg"
          class="size-8 object-contain lg:size-12"
          alt="Twitter"
        />
      </div>
      <div
        class="flex items-center justify-center rounded-md p-2 duration-200 hover:bg-zinc-200"
      >
        <img
          src="/images/github.svg"
          class="size-8 object-contain lg:size-12"
          alt="Github"
        />
      </div>
    </div>
  </div>
</main>
