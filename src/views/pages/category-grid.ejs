<div class="container mx-auto px-2 py-2">
  <!-- Separator Line -->
  <div class="mx-4 mb-3 border border-blue-500"></div>

  <!-- Category title-->
  <h1 class="mx-4 mb-3 text-3xl font-bold"><%= categoryName %> News</h1>

  <!-- Separator Line -->
  <div class="mx-4 mb-3 border border-blue-500"></div>

  <!-- Subcategories Navigation -->
  <div class="mx-4 mb-3 flex flex-wrap gap-4">
    <% const currentUrlParts=locals.req.path.split('/').filter(Boolean);
    categories.find(cat=> cat.name ===
    currentUrlParts[0])?.subcategories.forEach(sub => { %>
    <a
      href="<%= sub.link %>"
      class="<%= currentUrlParts[1] === sub.name ? 'bg-blue-500 text-white' : 'bg-gray-100 hover:text-white' %> rounded-full px-4 py-2 font-semibold transition-all duration-200 hover:bg-blue-500"
    >
      <%= sub.displayName %>
    </a>
    <% }) %>
  </div>

  <!-- Separator Line -->
  <div class="mx-4 border border-gray-300"></div>
</div>
<div class="container mx-auto px-4 py-8">
  <!-- Articles -->
  <% if (articles.length===0) { %>
  <p class="text-gray-600">No articles found in this category.</p>
  <% } else { %>
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
    <% articles.forEach(article=> { %>
    <article
      class="bg-white p-4 shadow-md transition-transform duration-300 hover:scale-105 hover:shadow-lg"
    >
      <!-- Featured Image -->
      <a href="/<%= article.slug %>">
        <img
          alt="<%= article.title %>"
          class="mb-4 h-48 w-full object-cover"
          src="<%= article.imageUrl || 'https://placehold.co/600x400/EEE/31343C' %>"
        />
      </a>
      <!-- Article Info -->
      <div class="space-y-2">
        <h2 class="text-xl font-semibold">
          <a
            href="/<%= article.slug %>"
            class="transition-colors duration-200 hover:text-blue-500"
          >
            <%= article.title %>
          </a>
        </h2>

        <!-- Category -->
        <p class="text-gray-600">
          <span class="font-medium">Category:</span>
          <%= categoryName %>
        </p>

        <!-- Tags -->
        <div class="flex flex-wrap gap-2">
          <% article.tags.forEach(tag=> { %>
          <a
            href="/tag/<%= tag %>"
            class="rounded-full bg-gray-100 px-2 py-1 text-sm transition-colors duration-200 hover:bg-blue-500 hover:text-white"
          >
            #<%= tag %>
          </a>
          <% }) %>
        </div>

        <!-- Date -->
        <p class="text-sm text-gray-500">
          Posted on: <%= article.datePublished %>
        </p>

        <!-- Abstract -->
        <p class="line-clamp-3 text-gray-600"><%= article.abstract %></p>
      </div>
    </article>
    <% }) %>
  </div>
  <% } %>
</div>
