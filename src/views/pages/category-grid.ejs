<div class="container mx-auto px-2 py-2">
    <!-- Separator Line -->
    <div class="border border-blue-500 mx-4 mb-3"></div>
    <!-- Category title-->
    <h1 class="text-3xl font-bold mx-4 mb-3">
        <%= categoryName %> News
    </h1>
    <!-- Separator Line -->
    <div class="border border-blue-500 mx-4 mb-3"></div>

    <!-- Subcategories Navigation -->
    <div class="flex flex-wrap gap-4 mb-4 mx-4">
        <% categories.find(cat=> cat.name === activeCategory)?.subcategories.forEach(sub => { %>
            <a href="<%= sub.link %>" class="px-4 py-2 rounded-full font-semibold hover:bg-blue-500 hover:text-white transition-all duration-200 
            <%= locals.activeSubcategory === sub.name ? 'bg-blue-500 text-white' : 'bg-gray-100' %>">
                <%= sub.displayName %>
            </a>
            <% }) %>
    </div>
    <!-- Separator Line -->
    <div class="border border-gray-300 mx-4"></div>
</div>
<div class="container mx-auto px-4 py-8">
    <!-- Articles -->
    <% if (articles.length===0) { %>
        <p class="text-gray-600">No articles found in this category.</p>
        <% } else { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% articles.forEach(article=> { %>
                    <article
                        class="bg-white p-4 shadow-md hover:shadow-lg hover:scale-105 transition-transform duration-300">
                        <!-- Featured Image -->
                        <a href="/<%= article.slug %>">
                            <img alt="<%= article.title %>" class="w-full h-48 object-cover mb-4"
                                src="<%= article.imageUrl || 'https://placehold.co/600x400/EEE/31343C' %>" />
                        </a>
                        <!-- Article Info -->
                        <div class="space-y-2">
                            <h2 class="text-xl font-semibold">
                                <a href="/<%= article.slug %>"
                                    class="hover:text-blue-500 transition-colors duration-200">
                                    <%= article.title %>
                                </a>
                            </h2>

                            <!-- Category -->
                            <p class="text-gray-600">
                                <span class="font-medium">Category:</span>
                                <%= categoryName %>
                            </p>

                            <!-- Tags -->
                            <div class="flex flex-wrap gap-2">
                                <% article.tags.forEach(tag=> { %>
                                    <a href="/tag/<%= tag %>"
                                        class="text-sm bg-gray-100 px-2 py-1 rounded-full hover:bg-blue-500 hover:text-white transition-colors duration-200">
                                        #<%= tag %>
                                    </a>
                                    <% }) %>
                            </div>

                            <!-- Date -->
                            <p class="text-gray-500 text-sm">Posted on: <%= article.datePublished %>
                            </p>

                            <!-- Abstract -->
                            <p class="text-gray-600 line-clamp-3">
                                <%= article.abstract %>
                            </p>
                        </div>
                    </article>
                    <% }) %>
            </div>
            <% } %>
</div>