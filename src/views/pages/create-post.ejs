<script>
  document.addEventListener("DOMContentLoaded", () => {
    tinymce.init({
      selector: "#content", // Chọn textarea để sử dụng TinyMCE
      plugins: "image media link",
      toolbar: "undo redo | styles | bold italic | link image | media",
      images_upload_url: "/upload/image", // URL để upload hình ảnh
      media_url_restrict: false,
      setup: function (editor) {
        editor.on("change", function () {
          editor.save();
        });
      },
    });
  });
</script>

<body>
  <div class="container mx-auto py-5" style="width: 1000px">
    <h1 class="mb-6 text-center text-4xl font-bold">Post New Article</h1>
    <form action="/post" method="POST" enctype="multipart/form-data">
      <div class="mb-4">
        <label for="title" class="block text-sm font-medium text-gray-700"
          >Title</label
        >
        <input
          type="text"
          id="title"
          name="name"
          required
          class="mt-1 block h-12 w-full rounded-md border border-gray-300 p-2 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200"
        />
      </div>

      <div class="mb-4">
        <label
          for="summary"
          class="none block text-sm font-medium text-gray-700"
          >Summary</label
        >
        <textarea
          id="summary"
          name="summary"
          required
          class="mt-1 block w-full resize-none rounded-md border border-gray-300 p-2 shadow-sm"
        ></textarea>
      </div>

      <div class="mb-4 flex flex-row items-center gap-4">
        <input type="checkbox" name="premium" id="summary" required />
        <label
          for="premium"
          class="none block text-sm font-medium text-gray-700"
          >Premium?</label
        >
      </div>

      <div class="mb-4">
        <label
          for="thumbnail-large"
          class="block text-sm font-medium text-gray-700"
          >Thumbnail (large version)</label
        >
        <input
          id="thumbnail-large"
          name="thumbnail-large"
          required
          type="file"
          accept="image/jpeg, image/gif, image/png, image/webp, image/bmp"
          class="mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm"
        />
      </div>

      <div class="mb-4">
        <label
          for="thumbnail-small"
          class="block text-sm font-medium text-gray-700"
          >Thumbnail (small version)</label
        >
        <input
          id="thumbnail-small"
          name="thumbnail-small"
          required
          type="file"
          accept="image/jpeg, image/gif, image/png, image/webp, image/bmp"
          class="mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm"
        />
      </div>

      <div class="mb-4">
        <label for="content" class="block text-sm font-medium text-gray-700"
          >Content</label
        >
        <textarea
          id="content"
          name="content"
          required
          class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm"
        ></textarea>
      </div>

      <div class="mb-4">
        <label for="category" class="block text-sm font-medium text-gray-700"
          >Category</label
        >
        <select
          id="category"
          name="category"
          class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm"
        >
          <% availCategories.forEach(function(category) { %>
          <option value="<%= category._id %>"><%= category.name %></option>
          <% }); %>
        </select>
      </div>

      <div class="mb-4">
        <label for="tags" class="block text-sm font-medium text-gray-700"
          >Tags, separated by commas</label
        >

        <input
          type="text"
          id="tags"
          name="tags"
          required
          class="mt-1 block h-12 w-full rounded-md border border-gray-300 p-2 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200"
        />
      </div>

      <div class="mt-4 flex justify-center">
        <button type="submit" class="rounded bg-gray-800 px-4 py-2 text-white">
          Submit
        </button>
      </div>
    </form>
  </div>
</body>
