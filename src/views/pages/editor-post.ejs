<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Draft Articles Review</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
  <main class="py-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold mb-8 text-gray-900">Danh sách bài viết draft</h1>
      <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-200">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-800">Tiêu đề</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-800">Tác giả</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-800">Tóm tắt</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-800">Chuyên mục</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-800">Nhãn</th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-gray-800">Hành động</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-300">
            <% posts.forEach(post => { %>
              <tr class="hover:bg-gray-100">
                <td class="px-6 py-4 text-sm text-gray-700"><%= post.name %></td>
                <td class="px-6 py-4 text-sm text-gray-700"><%= post.writer.fullName %></td>
                <td class="px-6 py-4 text-sm text-gray-700"><%= post.abstract %></td>
                <td class="px-6 py-4 text-sm text-gray-700"><%= post.category.name %></td>
                <td class="px-6 py-4 text-sm text-gray-700"><%= post.tags.tag %></td>
                <td class="px-6 py-4 text-center">
                  <div class="flex space-x-2"> <!-- Add flex and spacing -->
                    <button class="bg-blue-500 hover:bg-blue-600 text-white w-32 px-4 py-2 rounded-lg" onclick="openDetailModal('<%= post._id %>')">Chi tiết</button>
                    <button class="bg-green-500 hover:bg-green-600 text-white w-32 px-4 py-2 rounded-lg" onclick="openApproveModal('<%= post._id %>')">Duyệt</button>
                    <button class="bg-red-500 hover:bg-red-600 text-white w-32 px-4 py-2 rounded-lg" onclick="openRejectModal('<%= post._id %>')">Từ chối</button>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <!-- Modal Chi tiết -->
  <div id="detail-modal" class="fixed inset-0 bg-gray-800 bg-opacity-75 hidden z-50 flex items-center justify-center">
    <div class="bg-white w-96 rounded-lg shadow-lg p-6">
      <h2 class="text-lg font-semibold mb-4 text-gray-900">Thông tin chi tiết</h2>
      <div id="detail-body" class="text-sm text-gray-700"></div>
      <div class="mt-6 text-right">
        <button class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition duration-150 ease-in-out" onclick="closeModal('detail-modal')">Đóng</button>
      </div>
    </div>
  </div>

  <!-- Modal Duyệt -->
  <div id="approve-modal" class="fixed inset-0 bg-gray-800 bg-opacity-75 hidden z-50 flex items-center justify-center">
    <div class="bg-white w-96 rounded-lg shadow-lg p-6">
      <h2 class="text-lg font-semibold mb-4 text-gray-900">Chọn ngày public</h2>
      <div>
        <label for="publish-date" class="block text-sm font-medium text-gray-700">Ngày public:</label>
        <input id="publish-date" type="date" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>
      <div class="mt-6 text-right">
        <button class="bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-2 rounded-lg transition duration-150 ease-in-out" onclick="approvePost()">Duyệt</button>
        <button class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition duration-150 ease-in-out" onclick="closeModal('approve-modal')">Hủy</button>
      </div>
    </div>
  </div>

  <!-- Modal Từ chối -->
  <div id="reject-modal" class="fixed inset-0 bg-gray-800 bg-opacity-75 hidden z-50 flex items-center justify-center">
    <div class="bg-white w-96 rounded-lg shadow-lg p-6">
      <h2 class="text-lg font-semibold mb-4 text-gray-900">Nhập lý do từ chối</h2>
      <div>
        <label for="reject-reason" class="block text-sm font-medium text-gray-700">Lý do:</label>
        <textarea id="reject-reason" rows="4" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
      </div>
      <div class="mt-6 text-right">
        <button class="bg-red-600 hover:bg-red-700 text-white font-semibold px-4 py-2 rounded-lg transition duration-150 ease-in-out" onclick="rejectPost()">Từ chối</button>
        <button class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition duration-150 ease-in-out" onclick="closeModal('reject-modal')">Hủy</button>
      </div>
    </div>
  </div>

  <script>
    function openDetailModal(postId) {
      console.log(`Fetching post with ID: ${postId}`); // Debug
      fetch(`/posts/${postId}`)
        .then(response => {
          if (!response.ok) throw new Error('Lỗi fetch dữ liệu');
          return response.json();
        })
        .then(post => {
          console.log('Fetched post:', post); // Debug
          const modal = document.getElementById('detail-modal');
          const body = document.getElementById('detail-body');
          body.innerHTML = `
            <p><strong>Tiêu đề:</strong> ${post.name}</p>
            <p><strong>Tác giả:</strong> ${post.writer?.fullName || 'Không xác định'}</p>
            <p><strong>Nội dung:</strong> ${post.content}</p>
          `;
          modal.classList.remove('hidden');
        })
        .catch(err => {
          console.error('Lỗi khi mở modal chi tiết:', err);
        });
    }

    function openApproveModal(postId) {
      document.getElementById('approve-modal').dataset.postId = postId;
      document.getElementById('approve-modal').classList.remove('hidden');
    }

    function openRejectModal(postId) {
      document.getElementById('reject-modal').dataset.postId = postId;
      document.getElementById('reject-modal').classList.remove('hidden');
    }

    function closeModal(modalId) {
      document.getElementById(modalId).classList.add('hidden');
    }

    function approvePost() {
      const modal = document.getElementById('approve-modal');
      const postId = modal.dataset.postId;
      const publishDate = document.getElementById('publish-date').value;

      fetch(`/posts/${postId}/approve`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ publishDate }),
      }).then(() => closeModal('approve-modal'));
    }

    function rejectPost() {
      const modal = document.getElementById('reject-modal');
      const postId = modal.dataset.postId;
      const reason = document.getElementById('reject-reason').value;

      fetch(`/posts/${postId}/reject`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ reason }),
      }).then(() => closeModal('reject-modal'));
    }
  </script>
</body>

</html>
