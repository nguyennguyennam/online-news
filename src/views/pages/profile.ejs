<div class="container mx-auto px-4 py-8">
    <!-- Profile Header -->
    <div class="mb-8 flex items-center justify-between">
      <h1 class="text-3xl font-bold">Profile Settings</h1>
      <div>
        <% if (userInfo.subscription && userInfo.subscription > Date.now()) { %>
          <span class="rounded-full bg-gradient-to-r from-purple-600 to-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-md">
            Premium
            <span class="ml-2 text-xs">
              (<%= Math.ceil((userInfo.subscription - Date.now()) / (1000 * 60 * 60 * 24)) %> days left)
            </span>
          </span>
        <% } else { %>
          <span class="rounded-full border border-black bg-black px-4 py-2 text-sm font-semibold text-white">
            Standard
          </span>
        <% } %>
      </div>
    </div>
  
    <!-- Profile Form -->
    <div class="rounded-lg bg-white p-6 shadow-md">
      <form action="/profile/update" method="POST" class="space-y-6">
        <!-- Full Name -->
        <div>
          <label for="fullName" class="mb-2 block text-sm font-medium text-gray-700">Full Name</label>
          <input
            type="text"
            id="fullName"
            name="fullName"
            value="<%= userInfo.fullName %>"
            class="w-full rounded-md border border-gray-300 p-2 focus:border-blue-500 focus:outline-none"
            required
          />
        </div>
  
        <!-- Date of Birth -->
        <div>
          <label for="dob" class="mb-2 block text-sm font-medium text-gray-700">Date of Birth</label>
          <input
            type="date"
            id="dob"
            name="dob"
            value="<%= userInfo.dob?.toISOString().split('T')[0] %>"
            class="w-full rounded-md border border-gray-300 p-2 focus:border-blue-500 focus:outline-none"
            required
          />
        </div>
  
        <!-- Change Password Section -->
        <div class="border-t pt-6">
          <h2 class="mb-4 text-xl font-semibold">Change Password</h2>
          <div class="space-y-4">
            <div>
              <label for="currentPassword" class="mb-2 block text-sm font-medium text-gray-700">Current Password</label>
              <input
                type="password"
                id="currentPassword"
                name="currentPassword"
                class="w-full rounded-md border border-gray-300 p-2 focus:border-blue-500 focus:outline-none"
              />
            </div>
            <div>
              <label for="newPassword" class="mb-2 block text-sm font-medium text-gray-700">New Password</label>
              <input
                type="password"
                id="newPassword"
                name="newPassword"
                class="w-full rounded-md border border-gray-300 p-2 focus:border-blue-500 focus:outline-none"
              />
            </div>
            <div>
              <label for="confirmPassword" class="mb-2 block text-sm font-medium text-gray-700">Confirm New Password</label>
              <input
                type="password"
                id="confirmPassword"
                name="confirmPassword"
                class="w-full rounded-md border border-gray-300 p-2 focus:border-blue-500 focus:outline-none"
              />
            </div>
          </div>
        </div>
  
        <!-- Submit Button -->
        <div class="flex justify-end">
          <button
            type="submit"
            class="rounded-md bg-blue-500 px-6 py-2 text-white transition duration-200 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          >
            Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>