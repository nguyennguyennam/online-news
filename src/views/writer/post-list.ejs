<!-- post-list.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh Sách Bài Viết</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <%- include('../components/writer-header.ejs') %>

  <body class="bg-gray-100">
    <div class="container mx-auto p-4">
      <h1 class="mb-6 text-center text-4xl font-bold">Danh Sách Bài Viết</h1>

      <!-- Đã được duyệt -->
      <div class="mb-8">
        <h2 class="mb-2 text-2xl font-semibold">Published</h2>
        <div
          class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
        >
          <% approvedPosts.forEach(post=> { %>
          <div class="rounded-lg bg-white p-4 shadow-md">
            <img
              src="<%= post.imageUrl %>"
              alt="<%= post.title %>"
              class="mb-4 h-48 w-full rounded-t-lg object-cover"
            />
            <a
              href="/posts/<%= post.id %>"
              class="text-blue-600 hover:underline"
            >
              <h3 class="text-xl font-semibold"><%= post.title %></h3>
            </a>
            <p class="text-gray-600"><%= post.summary %></p>
            <span class="text-green-600">PPublished</span>
          </div>
          <% }); %>
        </div>
      </div>

      <!-- approved -->
      <div class="mb-8">
        <h2 class="mb-2 text-2xl font-semibold">Approved</h2>
        <div
          class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
        >
          <% pendingPosts.forEach(post=> { %>
          <div class="rounded-lg bg-white p-4 shadow-md">
            <img
              src="<%= post.imageUrl %>"
              alt="<%= post.title %>"
              class="mb-4 h-48 w-full rounded-t-lg object-cover"
            />
            <a
              href="/posts/<%= post.id %>"
              class="text-blue-600 hover:underline"
            >
              <h3 class="text-xl font-semibold"><%= post.title %></h3>
            </a>
            <p class="text-gray-600"><%= post.summary %></p>
            <span class="text-yellow-600">Approved</span>
          </div>
          <% }); %>
        </div>
      </div>

      <!-- Bị từ chối -->
      <div class="mb-8">
        <h2 class="mb-2 text-2xl font-semibold">Denied</h2>
        <div
          class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
        >
          <% rejectedPosts.forEach(post=> { %>
          <div class="rounded-lg bg-white p-4 shadow-md">
            <img
              src="<%= post.imageUrl %>"
              alt="<%= post.title %>"
              class="mb-4 h-48 w-full rounded-t-lg object-cover"
            />
            <a
              href="/posts/<%= post.id %>"
              class="text-blue-600 hover:underline"
            >
              <h3 class="text-xl font-semibold"><%= post.title %></h3>
            </a>
            <p class="text-gray-600"><%= post.summary %></p>
            <p class="text-red-600">Denied</p>
            <!-- Nút Hiệu chỉnh -->
            <a
              href="/edit-post/<%= post.id %>"
              class="mt-4 inline-block rounded bg-gray-700 px-4 py-2 text-sm text-white hover:bg-gray-800"
            >
              Edit
            </a>
          </div>
          <% }); %>
        </div>
      </div>

      <!-- Chưa được duyệt -->
      <div>
        <h2 class="mb-2 text-2xl font-semibold">Draft</h2>
        <div
          class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
        >
          <% unapprovedPosts.forEach(post=> { %>
          <div class="rounded-lg bg-white p-4 shadow-md">
            <img
              src="<%= post.imageUrl %>"
              alt="<%= post.title %>"
              class="mb-4 h-48 w-full rounded-t-lg object-cover"
            />
            <a
              href="/posts/<%= post.id %>"
              class="text-blue-600 hover:underline"
            >
              <h3 class="text-xl font-semibold"><%= post.title %></h3>
            </a>
            <p class="text-gray-600"><%= post.summary %></p>
            <p class="text-gray-500">Draft</p>
            <!-- Nút Hiệu chỉnh -->
            <a
              href="/edit-post/<%= post.id %>"
              class="mt-4 inline-block rounded bg-gray-700 px-4 py-2 text-sm text-white hover:bg-gray-800"
            >
              Edit
            </a>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
